
@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style="height:152px; width:272px;"/>
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToShortDateString()</span>
                <p>@(x.Aciklama.Length > 30 ? x.Aciklama.Substring(0, 50) + "..." : x.Aciklama)</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Daha Fazlası >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")
    <div class="clear"></div>
</div>