@using TravelTripProje.Models.Siniflar
@model List<Blog>
    @{ 
        int count = 0;
    }
<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @foreach(var x in Model) {
            count++;
        <li class="list-bg"><span>@count</span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
        }
    </ul>
    <a href="/Blog/Index/" class="link1">Tüm Bloglar</a>
</div>
