@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach(var x in Model) {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" style="width:140px; height:85px;"/>
        </div>
        <div class="bot-desc">
            <p>@(x.Aciklama.Length > 30 ? x.Aciklama.Substring(0, 80) + "..." : x.Aciklama)</p>
        </div>
        <div class="clear"></div>
        }
    </div>
    @Html.Action("Partial5", "Default")
</div>